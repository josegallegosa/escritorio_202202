<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- ALERT_JOSE -->

<template id="s_alert_jose" inherit_id="website.snippets" name="s alert jose">
  <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="theme_tutorial.s_alert"
       t-thumbnail="/theme_tutorial/static/snippet_thumb.jpg"/>
  </xpath>
</template>


<template id="s_alert" name="Alert_jose">
    <div class="s_alert s_alert_md alert-info w-100 clearfix">
        <i class="fa fa-2x fa-info-circle s_alert_icon"/>
        <div class="s_alert_content">
            <p>hola <br/>holaholaholaholaholaholahola</p>
        </div>
    </div>
</template>

<!-- COLUMNS_JOSE -->

<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
  <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="theme_tutorial.s_three_columns"
       t-thumbnail="/theme_tutorial/static/snippet_thumb.jpg"/>
  </xpath>
</template>


<template id="s_three_columns" name="Columns_jose">
