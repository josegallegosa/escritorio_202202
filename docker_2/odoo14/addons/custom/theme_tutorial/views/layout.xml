                <div class="col-lg-3 s_col_no_bgcolor pt16 pb16">
                    <div class="card border rounded shadow bg-white h-100" style="border-width: 5px !important; border-color: rgb(36, 35, 39) !important; border-radius: 25px !important; box-shadow: rgb(36, 35, 39) 0px 0px 25px 0px !important; height: 500px !important" separator=" ">
                        <img class="card-img-top" style="max-width: auto; max-height: 76%;" src="/web/image/website.s_three_columns_default_image_1" alt=""/>
                        <div class="card-body">
                            <h3 class="card-title">AVENGERS </h3>
                            <p class="card-text">5 S/.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 s_col_no_bgcolor pt16 pb16">
                    <div class="card border rounded shadow bg-white h-100" style="border-width: 5px !important; border-color: rgb(36, 35, 39) !important; border-radius: 25px !important; box-shadow: rgb(36, 35, 39) 0px 0px 25px 0px !important; height: 500px !important" separator=" ">
                        <img class="card-img-top" style="max-width: auto; max-height: 76%;" src="/web/image/website.s_three_columns_default_image_2" alt=""/>
                        <div class="card-body">
                            <h3 class="card-title">AVENGERS 3</h3>
                            <p class="card-text">5.5 S/.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 s_col_no_bgcolor pt16 pb16">
                    <div class="card border rounded shadow bg-white h-100" style="border-width: 5px !important; border-color: rgb(36, 35, 39) !important; border-radius: 25px !important; box-shadow: rgb(36, 35, 39) 0px 0px 25px 0px !important; height: 500px !important" separator=" ">
                        <img class="card-img-top" style="max-width: auto; max-height: 76%;" src="/web/image/website.s_three_columns_default_image_3" alt=""/>
                        <div class="card-body">
                            <h3 class="card-title">AVENGERS ENDGAME</h3>
                            <p class="card-text">6 S/.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 s_col_no_bgcolor pt16 pb16">
                    <div class="card border rounded shadow bg-white h-100" style="border-width: 5px !important; border-color: rgb(36, 35, 39) !important; border-radius: 25px !important; box-shadow: rgb(36, 35, 39) 0px 0px 25px 0px !important; height: 500px !important" separator=" ">
                        <img class="card-img-top" style="max-width: auto; max-height: 76%;" src="/web/image/website.s_three_columns_default_image_3" alt=""/>
                        <div class="card-body">
                            <h3 class="card-title">AVENGERS 2</h3>
                            <p class="card-text">7 S/.</p>
                        </div>
                    </div>
